<div class="author">
    <h1 class="author__heading">Hi, I am Pradipt</h1>
    <p class="author__body">Web Developer and Content Creator.</p>
</div>

<img src="/img/Front.jpg" alt="New World" class="hero-image">

<section class="article">
    <h2 class="article__heading">Latest Prints
        
    </h2>
    
    <ul class="article-ul">

        <% data.forEach(post => { %>    
            <li>
                <a href="/post/<%= post._id  %>">
                    <span><%= post.title  %></span>
                    <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>
        <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>

 </section>